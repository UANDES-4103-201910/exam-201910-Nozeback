
<div class="row">
	<div class="col-lg-4 col-md-4 col-sm-4">
		<div class="jumbotron">
			
		</div>
	</div>
	<div class="col-lg-8 col-md-8 col-sm-8">
		<div class="jumbotron">
			<div class="table-responsive">
			    <table class="table table-dark table-hover table-bordered">
			    	
			    		<thead>
			    			<tr>
			    				<th>Brand</th>
						    	<th>Model</th>
						    	<th>Variant</th>
						    	<th>Price</th>
						    	<th>Type</th>
						    	<th>resume</th>
						    	<th>description</th>
			    			</tr>
			    		</thead>
			    		<tbody>
			    			<% @products.each do |prod|%>
			    			<tr>
			    				<td><%= prod.brand %></td>
			    				<td><%= prod.model %></td>
			    				<td><%= prod.variant %></td>
			    				<td>$<%= prod.price %>.-</td>
			    				<td><%= prod.producttype %></td>
			    				<td><%= prod.shortdesc %></td>
			    				<td><%= prod.largedesc %></td>
			    			</tr>
			    			<% end %>
			    		</tbody>
			    </table>
			</div>
		</div>
	</div>
</div>
